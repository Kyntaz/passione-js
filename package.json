{
  "name": "passione",
  "version": "1.1.0",
  "description": "A simple HTML preprocessor for simple websites.",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "example": "node ./build/main -i example example_output",
    "install:passione": "npm run build && npm i -g",
    "build:pack": "npm run build && npm pack"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Kyntaz/passione-js.git"
  },
  "author": "Pedro Quintas",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Kyntaz/passione-js/issues"
  },
  "homepage": "https://github.com/Kyntaz/passione-js#readme",
  "bin": {
    "passione": "./build/main.js"
  },
  "files": [
    "build/*",
    "README.md"
  ],
  "devDependencies": {
    "@tsconfig/node16": "1.0.2",
    "@types/fs-extra": "^9.0.13",
    "@types/html-minifier": "^4.0.2",
    "@types/minimist": "1.2.2",
    "@types/node": "17.0.36",
    "@types/showdown": "2.0.0",
    "typescript": "4.7.2"
  },
  "dependencies": {
    "fs-extra": "^10.1.0",
    "globby": "13.1.1",
    "html-minifier": "^4.0.0",
    "minimist": "1.2.6",
    "showdown": "2.1.0"
  }
}
